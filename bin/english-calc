#!/Users/training/homebrew/opt/bash/bin/bash
# english-calc.sh

# Map words to numbers
declare -A numbers=(
    ["zero"]=0
    ["one"]=1
    ["two"]=2
    ["three"]=3
    ["four"]=4
    ["five"]=5
    ["six"]=6
    ["seven"]=7
    ["eight"]=8
    ["nine"]=9
)

# Convert words to numbers if needed
a="${numbers[$1]:-$1}"
op="$2"
b="${numbers[$3]:-$3}"

# Perform calculation
case "$op" in
    plus) echo "$a + $b = $(($a + $b))" ;;
    minus) echo "$a - $b = $(($a - $b))" ;;
    times) echo "$a * $b = $(($a * $b))" ;;
    divided)
        if [ "$b" -ne 0 ]; then
            echo "$a / $b = $(($a / $b))"
        else
            echo "Error: Division by zero"
        fi
        ;;
    *)
        echo "Unknown operation: $op"
        ;;
esac

